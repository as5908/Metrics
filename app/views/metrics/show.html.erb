<h1 align="center">Listing metrics</h1>
<h3 align="center"><%= link_to "Export to CSV", :controller => "metrics", :action => "index", :format => :csv %></h3><br/>
<!-- <%= link_to " csv", "/csv",request.parameters.merge({:format => "csv"})%>-->
<table border="1" width="100%" class="altrowstable" id="alternatecolor">
  <tr>
    <th><u>Status Ids</u></th>
    <th><u>Text</u></th>
    <th><u>Accounts used</u></th>
    <th><u>Followers count</u></th>
    <th><u>Time Taken(in millisec)</u></th>
    <th><u>Failures</u></th>
    <th><u>Created at</u></th>
  </tr>

<% @metrics.each do |metric| %>
  <tr>
    <td><%= metric.Status_id %></td>
    <td><%= metric.Text %></td>
    <td><%= metric.Accounts_Used %></td>
    <td><%= metric.Followers_Count %></td>
    <td><%= metric.Time %></td>
    <td><%= metric.Failures %></td>
    <td><%= metric.created_at %></td>
  </tr>
<% end %>
</table>

<br />

